<div class="left_sidebar_area">
    <aside class="left_widgets p_filter_widgets">
        <div class="l_w_title">
            <h3>Các hãng </h3>
        </div>
        <div class="widgets_inner">
            <ul class="list">
                @foreach (var category in Model)
                {
                    <li>
                        <a asp-action="Display" asp-controller="Categories" asp-route-category_id="@category.id">@category.name</a>
                    </li>
                }
            </ul>
        </div>
    </aside>
</div>