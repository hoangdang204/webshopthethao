    @using Webbandothethao.ViewModels


    <h3>Đơn Hàng Chi Tiết</h3>

    <h4>Thông tin đơn hàng</h4>
    <div>
        <p><strong>Mã đơn hàng:</strong> @Model.Orders.id</p>
        <p><strong>Ngày đặt:</strong> @Model.Orders.createdAt</p>
        <p><strong>Tổng tiền:</strong> @Model.Orders.totalPrice VNĐ</p>
        <p><strong>Trạng thái:</strong> @Model.Orders.status</p>
    </div>

    <h4>Chi tiết sản phẩm</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Name</td>
                    <td><img src="~/img/product/new-product/@detail.ImageUrl"  width="100" /></td>
                    <td>@detail.Quantity</td>
                    <td>@detail.Price</td>
                    <td>@detail.Total VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
<!-- Thêm các kiểu CSS nếu cần -->
<style>
    .table {
        margin-top: 20px;
        font-size: 1.1rem;
    }
    
    .card {
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .table img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .badge {
        font-size: 0.9rem;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }
</style>
