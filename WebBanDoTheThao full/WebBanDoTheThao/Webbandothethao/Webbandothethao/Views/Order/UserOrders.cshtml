@model UserOrdersViewModel

<section class="user-orders section_gap">
    <div class="container">
        <h3>Danh sách đơn hàng của bạn</h3>

        @if (Model.Orders != null && Model.Orders.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr onclick="location.href='@Url.Action("OrderDetails", "Cart", new { id = order.id })'"
                            style="cursor: pointer;">
                            <td>@order.id</td>
                            <td>@order.createdAt.ToString("dd/MM/yyyy")</td>
                            <td>@String.Format("{0:C}", order.totalPrice)</td>
                            <td>@order.status</td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "Order", new { id = order.id })"
                                   class="btn btn-primary btn-sm">Xem chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Bạn chưa có đơn hàng nào.</p>
        }
    </div>
</section>
